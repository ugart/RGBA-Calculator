<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="@+id/seekBar2"
            app:layout_constraintTop_toBottomOf="@+id/label_calculator"
            app:layout_constraintTop_toTopOf="@+id/materialEditText"
            app:layout_constraintBottom_toBottomOf="@+id/materialEditText"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2" app:layout_constraintEnd_toEndOf="@+id/seekBar3"
            app:layout_constraintTop_toTopOf="@+id/materialEditText2"
            app:layout_constraintBottom_toBottomOf="@+id/materialEditText2"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar3" app:layout_constraintEnd_toEndOf="@+id/seekBar4"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/materialEditText3"
            app:layout_constraintBottom_toBottomOf="@+id/materialEditText3"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialEditText4" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="@+id/materialEditText4"
            app:layout_constraintBottom_toBottomOf="@+id/materialEditText4"/>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materialEditText4"
            android:text="fasfasfasf4"
            app:layout_constraintTop_toBottomOf="@+id/materialEditText3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/seekBar4"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView"
    />
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materialEditText"
            app:layout_constraintStart_toStartOf="@+id/materialEditText2"
            android:text="fasfasfas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/label_calculator"
            app:layout_constraintBottom_toTopOf="@+id/materialEditText2"/>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materialEditText2" android:text="fasfasfas2"
            app:layout_constraintTop_toBottomOf="@+id/materialEditText" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/materialEditText3"
            app:layout_constraintBottom_toTopOf="@+id/materialEditText3"/>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materialEditText3" android:text="asfasfasf3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/materialEditText2"
            app:layout_constraintStart_toStartOf="@+id/materialEditText4"
            app:layout_constraintBottom_toTopOf="@+id/materialEditText4"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <TextView
            android:text="RGBA CALCULATOR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/label_calculator" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="36sp" android:textStyle="bold" android:textColor="#000000"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.88"/>

</android.support.constraint.ConstraintLayout>